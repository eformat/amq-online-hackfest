        <route id="send-order-reply-route" streamCache="true">
            <from id="route-from-incoming-orders" uri="amqp:queue:input_online"/>
            <setHeader headerName="customerId" id="set-customer-id-header">
                <xpath>/order/customer/@id</xpath>
            </setHeader>
            <setHeader headerName="destination-uri" id="set-destination-uri-header">
                <simple>amqp:queue:result_${header.customerId}</simple>
            </setHeader>
            <delay id="processing-delay">
                <constant>10000</constant>
            </delay>
            <routingSlip id="send-to-destination-uri-routing-slip">
                <header>destination-uri</header>
            </routingSlip>
            <transform id="transform-to-alert-message">
            	<simple>Processed order from ${header.customerId}</simple>
            </transform>
            <to id="send-order-alert" uri="amqp:topic:alerts"/>
        </route>
